  "main": "index.js",
  "scripts": {
    "postinstall": "npm rebuild nodegit",
    "clean": "rm -rf dist",
    "build": "NODE_ENV=production run-s build:*",
    "build:js": "webpack --mode development --progress",
    "build:css": "node bundle-css-modules.js 'lib/share/**/*.css' -o dist/style.css -v",
    "watch": "run-p watch:*",
    "watch:js": "NODE_ENV=development webpack --mode development --progress -w",
    "watch:css": "NODE_ENV=development node bundle-css-modules.js 'lib/share/**/*.css' -o dist/style.css -w -v",
    "watch:server": "NODE_ENV=development node inspect lib/server",
    "start": "NODE_ENV=production node lib/server",
    "lint": "run-s lint:*",
    "lint:js": "eslint '{lib/**/*.js,test/**/*.js}'",
    "typecheck": "flow",
    "typecheck:install": "flow-typed install",
    "test": "NODE_ENV=test nyc --all --include 'lib/**' --exclude 'lib/{server/index.js,client/*.js,share/stories,**/*.test.js}' tape -r @babel/register -r ./lib/__tests__/init.js 'lib/**/*.test.js' 2>/dev/null | tap-diff",
    "test:auto": "NODE_ENV=test tape-watch -r @babel/register 'lib/**/*.test.js' -v | tap-diff",
    "storybook": "echo disabled until v4 # start-storybook -p 6006",
    "build-storybook": "echo disabled until v4 # build-storybook"
  },
