{
  "name": "gh",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm rebuild nodegit",
    "clean": "rm -rf dist",
    "build": "NODE_ENV=production run-s build:*",
    "build:js": "webpack --mode development --progress",
    "build:css": "node bundle-css-modules.js 'lib/share/**/*.css' -o dist/style.css -v",
    "watch": "run-p watch:*",
    "watch:js": "NODE_ENV=development webpack --mode development --progress -w",
    "watch:css": "NODE_ENV=development node bundle-css-modules.js 'lib/share/**/*.css' -o dist/style.css -w -v",
    "watch:server": "NODE_ENV=development node inspect lib/server",
    "start": "NODE_ENV=production node lib/server",
    "lint": "run-s lint:*",
    "lint:js": "eslint '{lib/**/*.js,test/**/*.js}'",
    "typecheck": "flow",
    "typecheck:coverage": "flow-coverage-report -i 'lib/**/*.js' -x 'lib/**/*.test.js'",
    "test": "run-s test:tape test:jest",
    "test:tape": "NODE_ENV=test nyc --all --include 'lib/**' --exclude 'lib/{server/index.js,client/*.js,share/stories,**/*.test.js}' tape -r @babel/register -r ./legacy-test-initializer.js 'lib/**/*.legacy-test.js' 2>/dev/null | tap-diff",
    "test:jest": "NODE_ENV=test jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "author": {
    "name": "KATO Kei",
