{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["react"]
  },
  "exclude": ["node_modules", "src/**/*.test.tsx", "src/**/*.stories.tsx"],
  "include": ["src/**/*"]
}
